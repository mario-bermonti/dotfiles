syntax on

"" Adjusts highlighting for dark backgrounds
set background=dark

"" correct identation
filetype indent plugin on

set tabstop=8

"" Converts tabs to whitespaces
set expandtab

"" tab =  to 4 spaces
set softtabstop=4

"" Same as previous but for autod-indents
set shiftwidth=4

"" Auto indenting depending on file type
filetype indent on
